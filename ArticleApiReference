from newspaper import Article
import google.generativeai as genai

# Set up Gemini
genai.configure(api_key="")
model = genai.GenerativeModel("gemini-2.0-flash")

# Extract full text from URL
url = "https://www.cnn.com/2025/06/29/science/video/jeff-bezos-blue-origin-new-shepard-ns-33-launch-digvid"
article = Article(url)
article.download()
article.parse()

# Summarize
prompt = f"Summarize the following article in 12 sentences:\n\n{article.text}"
response = model.generate_content(prompt)
print(response.text)

